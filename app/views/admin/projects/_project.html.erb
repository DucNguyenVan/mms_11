<tr>
  <td><%= project_counter + 1 %></td>
  <td><%= link_to project.name, admin_project_path(project) %></td>
  <td><%= link_to project.abbreviation, admin_project_path(project) %></td>
  <td>
    <% if project.leader.nil? %>
      <%= t "project.not_set_leader" %>
    <% else %>
      <%= link_to project.leader.name, admin_user_path(project.leader) %>
    <% end %>
  </td>
</tr>
